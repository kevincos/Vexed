<?xml version="1.0"?>
<ArrayOfDialogChunk xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <DialogChunk>
    <id>Default</id>
    <speaker>OldMan</speaker>
    <textList>
      <string>Hey there! I'm a helpful NPC character. I'm 
here to give you hints and useful advice.</string>
      <string>Don't worry. You know you can trust me 
because I've got this sweet beard.</string>
    </textList>
    <pause>true</pause>
  </DialogChunk>
  <DialogChunk>
    <id>Help</id>
    <speaker>OldMan</speaker>
    <textList>
      <string>Collect all these yellow things to activate the door!</string>      
    </textList>
    <pause>true</pause>
  </DialogChunk>
  <DialogChunk>
    <id>PowerUp</id>
    <speaker>System</speaker>
    <textList>
      <string>This door isn't powered. Collect more
power cubes.</string>      
    </textList>
    <pause>false</pause>
  </DialogChunk>
  <DialogChunk>
    <id>ChaseBoss1</id>
    <speaker>ChaseBoss</speaker>
    <textList>
      <string>Bwahahahaha. Puny pajama man! I will crush you!</string>      
    </textList>
    <pause>true</pause>
  </DialogChunk>
  <DialogChunk>
    <id>ChaseBoss2</id>
    <speaker>ChaseBoss</speaker>
    <textList>
      <string>Ack! I'm stuck... You'll pay for this!</string>
    </textList>
  </DialogChunk>
  <DialogChunk>
    <id>ChaseBoss3</id>
    <speaker>ChaseBoss</speaker>
    <textList>
      <string>No wait! Don't touch that! Stay away from my
vulnerable backside!</string>
    </textList>
    <pause>false</pause>
  </DialogChunk>
  <DialogChunk>
    <id>ChaseBoss4</id>
    <speaker>ChaseBoss</speaker>
    <textList>
      <string>Ouch! That hurt!</string>
    </textList>
    <pause>false</pause>
  </DialogChunk>
  <DialogChunk>
    <id>ChaseBoss5</id>
    <speaker>ChaseBoss</speaker>
    <textList>
      <string>Noooooo! I've been defeated by a dude in green
pajamas!</string>
    </textList>
    <pause>false</pause>
  </DialogChunk>
  <DialogChunk>
    <id>ArmorBoss1</id>
    <speaker>ArmorBoss</speaker>
    <textList>
      <string>Haha! Fool! Your weapons will never penetrate
my invincible armor!</string>
      <string>Prepare to die!!!</string>
    </textList>
    <pause>true</pause>
  </DialogChunk>
  <DialogChunk>
    <id>ArmorBoss4</id>
    <speaker>ArmorBoss</speaker>
    <textList>
      <string>Nooo... brothers... avenge me!</string>
    </textList>
    <pause>false</pause>
  </DialogChunk>
  <DialogChunk>
    <id>ArmorBoss2</id>
    <speaker>ArmorBoss</speaker>
    <textList>
      <string>Ack! You've found my weak spot!</string>
    </textList>
    <pause>false</pause>
  </DialogChunk>
  <DialogChunk>
    <id>ArmorBoss3</id>
    <speaker>ArmorBoss</speaker>
    <textList>
      <string>Oh yeah? Let's see how you deal with my heat 
seeking missiles?</string>
    </textList>
    <pause>false</pause>
  </DialogChunk>
  <DialogChunk>
    <id>IceSnake1</id>
    <speaker>IceSnake</speaker>
    <textList>
      <string>Muahaha. There's a totally sweet item in the
next room. But you'll never live to see it!
      </string>
      <string>
        Feel the icy wrath of... ICE SNAKE!
      </string>
    </textList>
    <pause>true</pause>
  </DialogChunk>
  <DialogChunk>
    <id>IceSnake2</id>
    <speaker>IceSnake</speaker>
    <textList>
      <string>Gah! My ice armor is cracking!
      </string>
    </textList>
    <pause>false</pause>
  </DialogChunk>
  <DialogChunk>
    <id>IceSnake3</id>
    <speaker>IceSnake</speaker>
    <textList>
      <string>Fool! You've thawed out my guns! Now I'll
get you!
      </string>
    </textList>
    <pause>false</pause>
  </DialogChunk>
  <DialogChunk>
    <id>IceSnake4</id>
    <speaker>IceSnake</speaker>
    <textList>
      <string>Ouch! You'll never defeat me!
      </string>
    </textList>
    <pause>false</pause>
  </DialogChunk>
  <DialogChunk>
    <id>IceSnake5</id>
    <speaker>IceSnake</speaker>
    <textList>
      <string>Nooo... I've failed!
      </string>
    </textList>
    <pause>false</pause>
  </DialogChunk>
  <DialogChunk>
    <id>SnowMan1</id>
    <speaker>SnowMan</speaker>
    <textList>
      <string>Bwahahaha. You can't hurt me! My ice armor is far too
strong for blasters!
      </string>
      <string>You've made it pretty far, but your
quest ends here! The third dimension will be ours!        
      </string>
    </textList>
    <pause>true</pause>
  </DialogChunk>
  <DialogChunk>
    <id>SnowMan2</id>
    <speaker>SnowMan</speaker>
    <textList>
      <string>What the? A loose block?!?
      </string>      
    </textList>
    <pause>false</pause>
  </DialogChunk>
  <DialogChunk>
    <id>SnowMan3</id>
    <speaker>SnowMan</speaker>
    <textList>
      <string>Curses! You've broken through my armor!
      </string>
      <string>I'll just have to deal with you the old fashioned way
while my armor regenerates!</string>
    </textList>
    <pause>true</pause>
  </DialogChunk>
  <DialogChunk>
    <id>SnowMan4</id>
    <speaker>SnowMan</speaker>
    <textList>
      <string>Ah... that's better! Now where were we?
      </string>
    </textList>
    <pause>false</pause>
  </DialogChunk>
  <DialogChunk>
    <id>SnowMan5</id>
    <speaker>SnowMan</speaker>
    <textList>
      <string>You're a persistent little bugger aren't you...
      </string>
    </textList>
    <pause>false</pause>
  </DialogChunk>
  <DialogChunk>
    <id>SnowMan6</id>
    <speaker>SnowMan</speaker>
    <textList>
      <string>Nooooooooo...
      </string>
      <string>Oh whatever. Your DOOM awaits you in the Engine sector!
      </string>
    </textList>
    <pause>true</pause>
  </DialogChunk>


</ArrayOfDialogChunk>